---
layout: layouts/main.njk
assets:
  css:
  - https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css
---
<div class="tags">
  {% for tag in tags.slice(1) %}
  <a href="/tags/{{ tag | slug }}">{{ tag }}</a>
  {% endfor %}
</div>
<style>
  {% include "../../css/syntax_highlighting.css" %}
</style>

<h1>{{ title }}</h1>
<div class="post_date">{{ page.date.toUTCString().substr(0,16) }}</div>

<article>
  {{ content | safe }}
</article>

